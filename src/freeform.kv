#: include main.kv

<Freeform>
    name: 'freeform'
    on_enter: root.make_appear()

    freeform_text: freeform_text

    FloatLayout:
        MDLabel:
            text: 'Freeform 1'
            font_size: 30
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"center_x":0.58, "center_y":0.93}
            size_hint: 0.35, 0.15

        ScrollView:
            pos_hint: {"x": 0.05, "top": 0.9}
            size_hint: 0.9, 0.72

            MDLabel:
                id: freeform_text
                font_size: 20
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]

        MDRectangleFlatButton:
            text: 'Back'
            size_hint: 0.2, 0.1
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release: app.root.current = 'reference'
            pos_hint: {"x":0.05, "y":0.05}
            on_release:
                root.manager.transition.direction = "right"


