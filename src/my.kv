<HomeWindow>:
    name: 'home'
    FloatLayout:
        Label:
            text: 'Home page!'
            font_size: 30
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x":0.32, "top":0.95}
            size_hint: 0.35, 0.15
        Image:
            source: 'kblogo.png'
            allow_stretch: True
            keep_ratio: True
            pos_hint: {"x":0.25, "top":0.8}
            size_hint: 0.5, 0.5
        Button:
            text: 'Start'
            size_hint: 0.3, 0.2
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release: app.root.current = 'startpage'
            pos_hint: {"x":0.35, "y":0.1}
            on_release:
                root.manager.transition.direction = "left"

<StartWindow>:
    name: 'startpage'

    code: code
    move_name: move_name
    belt_colour: belt_colour
    related_moves: related_moves
    in_module: in_module

    FloatLayout:
        Label:
            text: 'Get a move'
            font_size: 30
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x":0.32, "top":0.95}
            size_hint: 0.35, 0.15

        Label:
            id: move_name
            pos_hint: {"x":0.32, "top":0.85}
            size_hint: 0.25, 0.1
            text: "Name: "

        Label:
            id: code
            pos_hint: {"x":0.32, "top":0.75}
            size_hint: 0.25, 0.1
            text: "Code: "

        Label:
            id: belt_colour
            pos_hint: {"x":0.32, "top":0.65}
            size_hint: 0.25, 0.1
            text: "Belt: "

        Label:
            id: related_moves
            pos_hint: {"x":0.32, "top":0.55}
            size_hint: 0.25, 0.1
            text: "(related would be here)"

        Label:
            id:in_module
            pos_hint: {"x":0.32, "top":0.45}
            size_hint: 0.25, 0.1
            text: "(module would be here)"

        Button:
            text: 'Get move'
            size_hint: 0.3, 0.2
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x":0.35, "y":0.1}
            on_release: root.get_move()

