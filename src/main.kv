<HomeWindow>:
    name: 'home'
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: 'Home page!'
            font_size: 30
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x":0.32, "top":0.95}
            size_hint: 0.35, 0.15

        Image:
            source: 'kblogo.png'
            allow_stretch: True
            keep_ratio: True
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint: 0.4, 0.4

        Label:
            text: ""
            size_hint: 0.05, 0.05

        MDRaisedButton:
            text: 'Start'
            size_hint: 0.3, 0.2
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release: app.root.current = 'startpage'
            pos_hint: {"center_x": 0.5, "center_y": 0.2}
            md_bg_color: app.theme_cls.primary_dark
            on_release:
                root.manager.transition.direction = "left"

        Label:
            text: ""
            size_hint: 0.05, 0.05

<StartWindow>:
    name: 'startpage'

    FloatLayout:
        Label:
            text: 'Start'
            font_size: 30
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x":0.32, "top":0.95}
            size_hint: 0.35, 0.15

        MDRaisedButton:
            text: 'Reference'
            size_hint: 0.3, 0.2
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release: app.root.current = 'reference'
            pos_hint: {"x":0.35, "y":0.6}
            md_bg_color: app.theme_cls.primary_dark
            on_release:
                root.manager.transition.direction = "left"

        MDRaisedButton:
            text: 'Practice'
            size_hint: 0.3, 0.2
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release: app.root.current = 'practice'
            pos_hint: {"x":0.35, "y":0.35}
            md_bg_color: app.theme_cls.primary_dark
            on_release:
                root.manager.transition.direction = "left"

        MDRectangleFlatButton:
            text: 'Back'
            size_hint: 0.2, 0.1
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release: app.root.current = 'home'
            pos_hint: {"x":0.05, "y":0.05}
            on_release:
                root.manager.transition.direction = "right"

