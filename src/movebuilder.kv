#: include main.kv

<MoveBuilder>:
    name: 'movebuilder'
    user_search: user_search

    code: code
    move_name: move_name
    belt_colour: belt_colour
    lesson_plan: lesson_plan
    related_moves: related_moves
    in_module: in_module

    FloatLayout:
        Label:
            text: 'Choose a belt'
            id: user_search
            font_size: 30
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x":0.32, "top":0.95}
            size_hint: 0.35, 0.15

        MDRectangleFlatButton:
            text: 'Back'
            size_hint: 0.2, 0.1
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release: app.root.current = 'practice'
            pos_hint: {"x":0.1, "y":0.1}
            on_release:
                root.manager.transition.direction = "right"

        Button:
            text: 'Search'
            size_hint: 0.2, 0.1
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x":0.35, "y":0.2}
            on_release: root.search_by_belt()

        Button:
            text: 'Next'
            size_hint: 0.2, 0.1
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x":0.6, "y":0.2}
            on_release: root.increase_count()

        Button:
            text: 'Previous'
            size_hint: 0.2, 0.1
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x":0.6, "y":0.1}
            on_release: root.decrease_count()

        Label:
            id: move_name
            pos_hint: {"x":0.32, "top":0.85}
            size_hint: 0.25, 0.1
            text: "Name: "

        Label:
            id: code
            pos_hint: {"x":0.32, "top":0.8}
            size_hint: 0.25, 0.1
            text: "Move ID: "

        Label:
            id: belt_colour
            pos_hint: {"x":0.32, "top":0.75}
            size_hint: 0.25, 0.1
            text: "Belt: "

        Label:
            id: lesson_plan
            pos_hint: {"x":0.32, "top":0.7}
            size_hint: 0.25, 0.1
            text: "Lesson plan: "

        Label:
            id: related_moves
            pos_hint: {"x":0.32, "top":0.65}
            size_hint: 0.25, 0.1
            text: "Related: "

        Label:
            id: in_module
            pos_hint: {"x":0.32, "top":0.6}
            size_hint: 0.25, 0.1
            text: "Module: "

        Spinner:
            id: spinner_id
            text: "Choose belt"
            pos_hint: {"x":0.35, "y":0.1}
            size_hint: 0.2, 0.1
            values: ["Red white", "Red", "Yellow white", "Yellow", "Orange white", "Orange", "Green white", "Green", "Blue white", "Blue", "Purple white", "Purple", "Brown white", "Brown", "Junior black", "Black"]

            on_text: root.spinner_clicked(spinner_id.text)