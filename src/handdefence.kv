#:include main.kv

<HandDefence>:
    name: 'handdefence'
    on_enter: root.search_hand_defence()

    move_list: move_list
    toggle: toggle
    subtitle: subtitle

    FloatLayout:
        MDLabel:
            text: 'Hand Defences'
            id: user_search
            font_style: "H5"
            pos_hint: {"center_x":0.58, "center_y":0.93}
            size_hint: 0.35, 0.15

        MDLabel:
            id: subtitle
            text: '21 for slide back (purple) and step back (brown white)'
            font_style: "Subtitle1"
            pos_hint: {"x":0.3, "center_y":0.88}

        ScrollView:
            pos_hint: {"x": 0, "top": 0.85}
            size_hint: 1, 0.67

            MDList:
                id: move_list

        MDRectangleFlatButton:
            text: 'Back'
            size_hint: 0.2, 0.1
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release: app.root.current = 'movemenu'
            pos_hint: {"x":0.05, "y":0.05}
            on_release:
                root.clear_results()
                root.manager.transition.direction = "right"

        MDRaisedButton:
            id: toggle
            text: 'Graded'
            size_hint: 0.2, 0.1
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"center_x":0.8, "y":0.05}
            md_bg_color: "#1f6dff"
            on_release: root.update_label()