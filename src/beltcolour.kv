#: include main.kv

BoxLayout:
    height: 60
    size_hint_y: None
    ScrollView:



<BeltColour>:
    name: 'beltcolour'
    my_list: my_list

    FloatLayout:
        Label:
            text: 'Moves by belt'
            font_size: 30
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x":0.32, "top":0.95}
            size_hint: 0.35, 0.15

        ScrollView:
            pos_hint: {"x": 0, "top": 0.85}

            MDList:
                id: my_list

        MDRectangleFlatButton:
            text: 'Back'
            size_hint: 0.2, 0.1
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release: app.root.current = 'reference'
            pos_hint: {"x":0.1, "y":0.1}
            on_release:
                root.manager.transition.direction = "right"

        MDRaisedButton:
            text: 'Search by belt'
            size_hint: 0.2, 0.1
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x":0.35, "y":0.2}
            on_release: root.search_for_id()
            md_bg_color: app.theme_cls.primary_dark


<ScrollableView>
    scroll_list: scroll_list

    Label:
        id: scroll_list
        text: root.text
        pos_hint: {"x":0.32, "top":0.85}
        font_size: 20
